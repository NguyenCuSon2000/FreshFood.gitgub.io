
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page Content -->
<div id="page-wrapper" style="min-height: 223px;" ng-controller="NCCController">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Danh sách nhà cung cấp
                </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Danh sách nhà cung cấp
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <form action="" method="get">
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <div class="col-md-4">
                                        <input type="text" ng-model="TenNCC" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <button type="button" ng-click="Search(TenNCC)" class="btn btn-success">Tìm kiếm</button>
                                        <!-- Button trigger modal -->
                                        <button ng-click="Them()" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modelId">
                                            Thêm mới
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" style="text-align: center;">
                                <thead>
                                    <tr>
                                        <th>Mã nhà cung cấp</th>
                                        <th>Tên nhà cung cấp</th>
                                        <th>Số điện thoại</th>
                                        <th>Địa chỉ</th>
                                        <th>Email</th>
                                        <th>Fax</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="n in ListNhaCungCap"
                                        ng-class-even="even" ng-class-odd="odd" id="tr_{{n.MaNCC}}">
                                        <td>{{n.MaNCC}}</td>
                                        <td>{{n.TenNCC}}</td>
                                        <td>{{n.SDT}}</td>
                                        <td>{{n.DiaChi}}</td>
                                        <td>{{n.Email}}</td>
                                        <td>{{n.Fax}}</td>
                                        <td>
                                            <button class="btn btn-success btn-sm" ng-click="Sua(n)" data-toggle="modal" data-target="#modelId">Sửa</button>
                                            <button class="btn btn-success btn-sm" ng-click="XoaNhaCungCap(s)">Xóa</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="pagination-container"><ul class="pagination"><li class="active"><a>1</a></li><li><a href="/Admin/User?page=2">2</a></li><li class="PagedList-skipToNext"><a href="/Admin/User?page=2" rel="next">»</a></li></ul></div>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <!-- Modal -->
    <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{_function}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="ma">Mã nhà cung cấp</label>
                        <input ng-model="n.MaNCC" type="text" id="ma" class="form-control" name="" aria-describedby="helpId" placeholder="">
                        <label for="name">Tên nhà cung cấp</label>
                        <input ng-model="n.TenNCC" type="text" id="name" class="form-control" name="" aria-describedby="helpId" placeholder="">
                        <label for="tel">Số điện thoại</label>
                        <input ng-model="n.SDT" type="text" id="tel" class="form-control" name="" aria-describedby="helpId" placeholder="">
                        <label for="address">Địa chỉ</label>
                        <input ng-model="n.DiaChi" type="text" id="address" class="form-control" name="" aria-describedby="helpId" placeholder="">
                        <label for="email">Email</label>
                        <input ng-model="n.Email" type="email" id="email" class="form-control" name="" aria-describedby="helpId" placeholder="">
                        <label for="fax">Fax</label>
                        <input ng-model="n.Fax" type="text" id="fax" class="form-control" name="" aria-describedby="helpId" placeholder="">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button ng-click="Save()" type="button" class="btn btn-primary">{{buttext}}</button>
                </div>
            </div>
        </div>
    </div>
    <!--End Modal-->
</div>
<!-- /#page-wrapper -->
