
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/dirPagination.js"></script>

<!-- Page Content -->
<div id="page-wrapper" style="min-height: 223px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Danh sách sản phẩm
                </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Danh sách sản phẩm
                    </div>

                    <!-- /.panel-heading -->
                    <div class="panel-body" ng-controller="SanPhamController">
                        <form action="/Admin/User" method="get">
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="searchString">
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modelId">
                                            Thêm mới
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" style="text-align: center;">
                                <thead>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Mã loại</th>
                                        <th>Đơn vị</th>
                                        <th>Mô tả</th>
                                        <th>Hình ảnh</th>
                                        <th>Đơn giá</th>
                                        <th width="100px">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="s in ListSanPham" total-items="totalCount"
                                        ng-class-even="even" ng-class-odd="odd" id="tr_{{s.MaSP}}">
                                        <td>{{s.MaSP}}</td>
                                        <td>{{s.TenSP}}</td>
                                        <td>{{s.MaLoaiSP}}</td>
                                        <td>{{s.DonVi}}</td>
                                        <td>{{s.MoTa}}</td>
                                        <td><img src="~/img/{{s.MaLoaiSP}}/{{s.HinhAnh}}" /></td>
                                        <td>{{s.DonGia}} VNĐ</td>
                                        <td>
                                            <a ng-click="Save()" data-toggle="modal" data-target="#modelId" href="">Sửa</a>
                                            |
                                            <a ng-click="XoaSanPham(s)" href="">Xoá</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="pagination-container">
                                <dir-pagination-controls max-size="maxSize"
                                                         direction-links="true"
                                                         boundary-links="true"
                                                         on-page-change="GetSanPhamList(newPageNumber)"
                                                         template-url="~/Scripts/dirPagination.tpl.html">
                                </dir-pagination-controls>
                                @*<ul class="pagination">
                                        <li class="active"><a>1</a></li>
                                        <li><a href="/Admin/User?page=2">2</a></li>
                                        <li class="PagedList-skipToNext"><a href="/Admin/User?page=2" rel="next">»</a></li>
                                    </ul>*@
                            </div>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->


<!-- Modal -->
<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="">Mã sản phẩm</label>
                    <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                    <label for="">Tên sản phẩm</label>
                    <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                    <label for="">Mã loại</label>
                    <select class="form-control" name="" id="">
                        <option>FreshFood</option>
                        <option>Rau</option>
                        <option></option>
                    </select>
                    <label for="">Đơn vị</label>
                    <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                    <label for="">Mô tả</label>
                    <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                    <label for="">Hình ảnh</label>
                    <input type="file" class="form-control" name="" id="" aria-describedby="helpId" placeholder="" ng-select="UploadFiles($files,'HinhAnh')">
                    <label for="">Đơn giá</label>
                    <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button ng-click="Save()" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

