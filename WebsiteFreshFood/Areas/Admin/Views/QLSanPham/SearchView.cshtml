
@{
    ViewBag.Title = "SearchView";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/dirPagination.js"></script>
<script src="~/Scripts/ng-file-upload.min.js"></script>

<!-- Page Content -->
<div id="page-wrapper" style="min-height: 223px;" ng-controller="SanPhamController">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Danh sách sản phẩm
                </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Danh sách sản phẩm
                    </div>

                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <form action="/Admin/SanPham/SearchView" method="get">
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <div class="col-md-4">
                                        <input type="text" ng-model="TenSP" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" ng-click="Search(TenSP)" class="btn btn-success">Tìm kiếm</button>
                                        <!-- Button trigger modal -->
                                        <button ng-click="Them()" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modelId">
                                            Thêm mới
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" style="text-align: center;">
                                <thead>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Mã loại</th>
                                        <th>Đơn vị</th>
                                        <th>Mô tả</th>
                                        <th>Hình ảnh</th>
                                        <th>Đơn giá</th>
                                        <th width="100px">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="s in ListTimKiem" current-page="currentPage" total-items="totalCount">
                                        <td>{{s.MaSP}}</td>
                                        <td>{{s.TenSP}}</td>
                                        <td>{{s.MaLoaiSP}}</td>
                                        <td>{{s.DonVi}}</td>
                                        <td>{{s.MoTa}}</td>
                                        <td><img src="~/img/{{s.MaLoaiSP}}/{{s.HinhAnh}}" /></td>
                                        <td>{{s.DonGia}} VNĐ</td>
                                        <td>
                                            <a ng-click="Sua(s)" data-toggle="modal" data-target="#modelId" href="">Sửa</a>
                                            |
                                            <a ng-click="XoaSanPham(s)" href="">Xoá</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            @*<div class="pagination-container">
                                <dir-pagination-controls max-size="maxSize"
                                                         direction-links="true"
                                                         boundary-links="true"
                                                         on-page-change="GetSanPhamList(newPageNumber)"
                                                         template-url="~/dirPagination.tpl.html">
                                </dir-pagination-controls>
                            </div>*@
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
