
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page Content -->
<div id="page-wrapper" style="min-height: 223px;" ng-controller="KhachHangController">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Danh sách khách hàng
                </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Danh sách khách hàng
                    </div>

                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <form action="/Admin/User" method="get">
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="searchString">
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modelId">
                                            Thêm mới
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" style="text-align: center;">
                                <thead>
                                    <tr>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>Địa chỉ</th>
                                        <th>Số điện thoại</th>
                                        <th>Email</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="k in ListKhachHang"
                                        ng-class-even="even" ng-class-odd="odd" id="tr_{{k.MaKH}}">
                                        <td>{{k.MaKH}}</td>
                                        <td>{{k.TenKH}}</td>
                                        <td>{{k.DiaChi}}</td>
                                        <td>{{k.SDT}}</td>
                                        <td>{{k.Email}}</td>
                                        <td>
                                            <a data-toggle="modal" data-target="#modelId" href="">Sửa</a>
                                            |
                                            <a data-ajax="true" data-ajax-complete="$('#row_21}').remove()" data-ajax-confirm="Bạn có muốn xoá bản ghi này?" data-ajax-method="Delete" href="/Admin/User/Delete/21">Xoá</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="pagination-container"><ul class="pagination"><li class="active"><a>1</a></li><li><a href="/Admin/User?page=2">2</a></li><li class="PagedList-skipToNext"><a href="/Admin/User?page=2" rel="next">»</a></li></ul></div>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <!-- Modal -->
    <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Khách hàng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="ma">Mã khách hàng</label>
                        <input type="text" id="ma" class="form-control" name="" aria-describedby="helpId" placeholder="">
                        <label for="name">Tên khách hàng</label>
                        <input type="text" id="name" class="form-control" name="" aria-describedby="helpId" placeholder="">
                        <label for="address">Địa chỉ</label>
                        <input type="text" id="address" class="form-control" name="" aria-describedby="helpId" placeholder="">
                        <label for="tel">Số điện thoại</label>
                        <input type="text" id="tel" class="form-control" name="" aria-describedby="helpId" placeholder="">
                        <label for="email">Email</label>
                        <input type="email" id="email" class="form-control" name="" aria-describedby="helpId" placeholder="">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button ng-click="Save()" type="button" value="Save" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
    <!--End Modal-->
</div>
<!-- /#page-wrapper -->
