
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Page Content -->
<div id="page-wrapper" style="min-height: 223px;" ng-controller="UserController">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Danh sách người dùng
                </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Danh sách người dùng
                    </div>

                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <form action="" method="get">
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <div class="col-md-4">
                                        <input type="text" ng-model="" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <button type="button" ng-click="Search()" class="btn btn-success">Tìm kiếm</button>
                                        <!-- Button trigger modal -->
                                        <button ng-click="Them()" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modelId">
                                            Thêm mới
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" style="text-align: center;">
                                <thead>
                                    <tr>
                                        <th>UserID</th>
                                        <th>UserName</th>
                                        <th>Password</th>
                                        <th>Role</th>
                                        <th>Active</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="u in ListUser"
                                        ng-class-even="even" ng-class-odd="odd" id="tr_{{u.UserID}}">
                                        <td>{{u.UserID}}</td>
                                        <td>{{u.UserName}}</td>
                                        <td>{{u.Pass}}</td>
                                        <td>{{u.Role}}</td>
                                        <td>{{u.Active}}</td>
                                        <td>
                                            <button class="btn btn-success btn-sm" ng-click="Sua(u)" data-toggle="modal" data-target="#modelId">Sửa</button>
                                            <button class="btn btn-success btn-sm" ng-click="XoaUser(u)">Xóa</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="pagination-container"><ul class="pagination"><li class="active"><a>1</a></li><li><a href="/Admin/User?page=2">2</a></li><li class="PagedList-skipToNext"><a href="/Admin/User?page=2" rel="next">»</a></li></ul></div>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
