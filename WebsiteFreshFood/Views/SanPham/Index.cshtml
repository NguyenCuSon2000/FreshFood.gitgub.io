            </div>
        </div>
    </div>
    <div class="row" >
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div id="pagination" class="mt-5">
                <dir-pagination-controls max-size="maxSize"
                                         direction-links="true"
                                         boundary-links="true"
                                         on-page-change="GetSanPhamList(newPageNumber)"
                                         template-url="~/Scripts/dirPagination.tpl.html">
                </dir-pagination-controls>
            </div>
        </div>
    </div>
    <!-- SCROLL TO TOP -->
    <div class="Scroll">
        <a href="#top" id="scrollToTop" title="Lên trên" style="display: block;" onclick="scrollToTop();return false">
            <i class="fas fa-arrow-alt-circle-up"></i>
        </a>
    </div>
</section>

<div class="clear-fix"></div>

