<div class="header-cart" ng-controller="HomeController">
    <a href="" ng-click="GetCart()" data-toggle="modal" data-target=".GioHang">
        <span class="icon-start">
            <img src="~/img/icon-cart.png" alt="">
        </span>
        <span class="cart-number">0</span>
    </a>
    <div class="modal fade GioHang" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <table class="table table-striped table-hover" style="text-align: center;">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="d in dsDonHang">
                            <td><a href="/CTSanPham/Index?masp={{d.MaSP}}" title="{{d.TenSP}}">{{d.TenSP}}</a></td>
                            <td>{{d.SoLuong}}</td>
                            <td>{{d.DonGia}} VND</td>
                            <td><i class="fas fa-times"></i></td>
                        </tr>
                    </tbody>
                </table>
                <div class="toal-cart" style="text-align: center">
                    <span>Total</span>
                    <span class="toal-price pull-right" id="total_price">54,000đ</span>
                </div>
                <div class="cart-buttons m-2">
                    <button ng-click="KiemTraDangNhap()" class="btn btn-success" type="button" data-toggle="modal" data-target="{{dathang}}">Payment</button>
                </div>
            </div>
        </div>
    </div>
</div>



